{% extends 'base.html.twig' %}

{% block title %}Enclosures{% endblock %}

{% block body %}

    {% include('test/_partials/_newDinoForm.html.twig') %}

    <h2>Enclosures</h2>

    <table class="table-enclosures">
        <tbody>
        {% for enclosure in enclosures %}
            <tr id="enclosure-{{ enclosure.id }}">
                <td>
                    {% if enclosure.securityActive %}
                        Security active! ssss
                    {% else %}
                        <button class="button button-alarm">Sound alarm !!!</button>
                    {% endif %}
                </td>
                <td>Enclosure #{{ enclosure.id }}</td>
                <td>
                    Contains <strong>{{ enclosure.dinosaurCount }}</strong> dinosaur(s)
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
